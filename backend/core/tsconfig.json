  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "noImplicitReturns": false,
    "esModuleInterop": true,
    "composite": false,
