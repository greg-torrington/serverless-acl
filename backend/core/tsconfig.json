      "@backend-core-resources/*": ["./resources/*"],
      "@backend-core-rest-api/*": ["./rest-api/*"],
    }
  },
  "references": [],
  "include": ["./**/*.ts"],
  "ts-node": {
    "esm": true
  } 
}
